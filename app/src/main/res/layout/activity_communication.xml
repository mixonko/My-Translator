<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF205DCD">

        <EditText
            android:id="@+id/firstText"
            style="@style/Text"
            android:hint="@string/userText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#CD0014">


        <EditText
            android:id="@+id/secondText"
            style="@style/Text"
            android:hint="@string/userText" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/firstLang"
                style="@style/Spinners" />

            <Button
                android:id="@+id/firstMic"
                style="@style/MicButtons"
                android:background="@drawable/ic_first_mic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_play" />

            <Button
                android:id="@+id/speaker"
                style="@style/MicButtons"
                android:layout_gravity="center"
                android:background="@drawable/ic_play_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/secondLang"
                style="@style/Spinners" />

            <Button
                android:id="@+id/secondMic"
                style="@style/MicButtons"
                android:layout_gravity="right"
                android:background="@drawable/ic_second_mic" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
