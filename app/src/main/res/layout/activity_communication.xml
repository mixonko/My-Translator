<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteDark"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TextLayouts"
        android:background="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/playFirstText"
                style="@style/UserButtons"
                android:layout_gravity="left"
                android:background="@drawable/my_play_but_blue_selector" />

            <Button
                android:id="@+id/deleteFirstText"
                style="@style/UserButtons"
                android:layout_gravity="right"
                android:background="@drawable/my_del_but_blue_selector" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/firstTextView"
                    style="@style/CommunicationBlueText"
                    android:textColor="@color/colorBlue" />
            </ScrollView>

            <EditText
                android:id="@+id/firstEditText"
                style="@style/CommunicationBlueText"
                android:hint="@string/userText"
                android:textColor="@color/colorBlue" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout style="@style/TextLayouts">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/playSecondText"
                style="@style/UserButtons"
                android:layout_gravity="left"
                android:background="@drawable/my_play_but_purple_selector" />

            <Button
                android:id="@+id/deleteSecondText"
                style="@style/UserButtons"
                android:layout_gravity="right"
                android:background="@drawable/my_del_but_purple_selector" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/secondTextView"
                    style="@style/CommunicationPurpleText" />
            </ScrollView>

            <EditText
                android:id="@+id/secondEditText"
                style="@style/CommunicationPurpleText"
                android:hint="@string/userText" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite">

        <Spinner
            android:id="@+id/firstLang"
            style="@style/Spinners"
            android:layout_gravity="left" />

        <Spinner
            android:id="@+id/secondLang"
            style="@style/Spinners"
            android:layout_gravity="right" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/firstMic"
            style="@style/ButtonsLayout"
            android:src="@drawable/my_mic_but_blue_selector" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/secondMic"
            style="@style/ButtonsLayout"
            android:src="@drawable/my_mic_but_purple_selector" />
    </LinearLayout>

</LinearLayout>
