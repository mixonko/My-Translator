<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteDark"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TextLayouts"
        android:background="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/playFirstText"
                style="@style/UserButtons"
                android:layout_gravity="left"
                android:background="@drawable/ic_play_button" />

            <Button
                android:id="@+id/deleteFirstText"
                style="@style/UserButtons"
                android:layout_gravity="right"
                android:background="@drawable/ic_del_text_button" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/firstTextView"
                    style="@style/Text"
                    android:textColor="@color/colorBlue" />
            </ScrollView>

            <EditText
                android:id="@+id/firstEditText"
                style="@style/Text"
                android:hint="@string/userText"
                android:textColor="@color/colorBlue" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout style="@style/TextLayouts">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/playSecondText"
                style="@style/UserButtons"
                android:layout_gravity="left"
                android:background="@drawable/ic_play_button" />

            <Button
                android:id="@+id/deleteSecondText"
                style="@style/UserButtons"
                android:layout_gravity="right"
                android:background="@drawable/ic_del_text_button" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/secondTextView"
                    style="@style/Text"
                    android:textColor="@color/colorPurple" />
            </ScrollView>

            <EditText
                android:id="@+id/secondEditText"
                style="@style/Text"
                android:hint="@string/userText"
                android:textColor="@color/colorPurple" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite">

        <Spinner
            android:id="@+id/firstLang"
            style="@style/Spinners"
            android:layout_gravity="left" />

        <Spinner
            android:id="@+id/secondLang"
            style="@style/Spinners"
            android:layout_gravity="right" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <LinearLayout style="@style/ButtonsLayout">

            <Button
                android:id="@+id/firstMic"
                style="@style/CommunicationButton"
                android:background="@drawable/my_mic_button_selector" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout style="@style/ButtonsLayout">

            <Button
                android:id="@+id/secondMic"
                style="@style/CommunicationButton"
                android:background="@drawable/my_mic_but_sec_selector" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
