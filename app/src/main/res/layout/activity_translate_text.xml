<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/firstLang"
            style="@style/Spinners"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/swapLang"
            style="@style/Buttons"
            android:layout_gravity="center"
            android:background="@drawable/ic_swap_horiz_button" />

        <Spinner
            android:id="@+id/secondLang"
            style="@style/Spinners"
            android:layout_gravity="right" />
    </FrameLayout>

    <LinearLayout
        style="@style/TextLayouts"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/playUserText"
                style="@style/PlayText"
                android:layout_gravity="left" />

            <Button
                android:id="@+id/deleteUserText"
                style="@style/DeleteText"
                android:layout_gravity="right" />

        </FrameLayout>

        <EditText
            android:id="@+id/userText"
            style="@style/Text"
            android:hint="@string/userText" />

    </LinearLayout>

    <LinearLayout
        style="@style/TextLayouts"
        android:orientation="vertical">

        <Button
            android:id="@+id/playResultText"
            style="@style/PlayText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resultText"
                style="@style/Text"
                android:text="фффф" />
        </ScrollView>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">

        <Button
            android:id="@+id/recorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/ic_mic_button" />

        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_camera_button" />

        <Button
            android:id="@+id/communication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/ic_communication_button" />

    </FrameLayout>


</LinearLayout>
