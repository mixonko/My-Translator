<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="UserButtons" parent="Buttons">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="TranslateText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="Text" parent="TranslateText">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Spinners">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextLayouts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">155dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">#fffefe</item>
    </style>

    <style name="MicButtons">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="GreetingTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
